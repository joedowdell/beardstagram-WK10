<%= form_tag charges_path(id: @share.id) do %>
  <article>
    <label class="amount">
      <span>Amount: <%=@share.price%> </span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" 
          class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%=@share.price_calc%>"></script>
<% end %>