        <ul class="nav nav-pills pull-right">
          <% if user_signed_in? %>
            <li class="active"><a href="/shares/new">New Share</a></li>
            <li><%= link_to "Sign out", destroy_user_session_path(:authenticity_token => form_authenticity_token()), method: :delete %></li>          
              <%else%>
            <li class="active"><a href="/users/sign_up">Sign Up</a></li>
            <li><a href="/users/sign_in">Sign In</a></li>
          <%end%>
        </ul>
        <a href="/shares"><h3 class="text-muted"><%= image_tag('beardstagram.png')%>Beardstagram</h3></a>
      </div>

      <div class="jumbotron">
        <h1>Beardstagram</h1>
        <p class="lead">
          <%= yield %>
        </p>
      </div>


      <div class="footer">
        <p>&copy; Beardstagram 2014</p>
