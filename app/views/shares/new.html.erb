<%= form_for @share, :html => { :multipart => true } do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :picture %>
  	<%= f.file_field :picture %>
	</p>
	<p>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</p>
	<p>
		<%= f.label :clip_list, 'Clips' %>
		<%= f.text_field :clip_list %>
	</p>
	<p>
		<%= f.label :price, 'Sale Price'%>
		<%= f.text_field :price %>
	</p>

	<p>
		<%= f.submit 'Create share' %>
	</p>
<% end %>